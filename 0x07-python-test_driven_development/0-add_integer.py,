#!/usr/bin/python3

'''A function that adds two integers and returns an integer'''

def add_integer(a, b=98):

	'''Adds two integers, a and b

	Args:
		a: The first integer to be added in the function
		b: the second integer in the function

		Returns:
			The sum of the two integers 'a' and 'b'

		Raises:
			typeerror exception with the message a must be an integer or b must be an integer.
	'''

	if not isinstance(a, (int, float)):
		raise TypeError("a must be an integer")
	if not isinstance(b, (int, float)):
		raise TypeError("b must be an integer")

	a = int(a)
	b = int(b)

	return a + b
